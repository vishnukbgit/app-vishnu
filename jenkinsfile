pipeline {
    agent any
    load "jenkins.groovy"
    environment {

        GITHUB_CREDENTIALS = credentials('vishnukbgit')
        AWS_CREDENTIALS = credentials('awscredentials')
    }
    stages {
        stage('access git') {
            steps {
                git 'https://github.com/vishnukbgit/app-vishnu.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def app = docker.build('012765396827.dkr.ecr.us-east-1.amazonaws.com/vishnu-ecr-db:"${env.tag}"')
                    docker.withRegistry('https://012765396827.dkr.ecr.us-east-1.amazonaws.com', 'ecr:us-east-1:awscredentials') {
                        // build image


                        // push image
                        app.push()
                    }
                }
            }

        }
    }
}

